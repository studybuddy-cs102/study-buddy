<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:backgroundTint="@null"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp">
        <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StudyBuddy"

                android:textStyle="bold"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:textSize="65sp"/>

        <TextView
                android:id="@+id/subTitle"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir"
                android:text="Please enter the code sent to your Bilkent email to activate your account and start using StuddyBuddy."
                android:textColor="@color/black"
                android:textSize="15sp"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:minWidth="50dp"
                    android:layout_marginRight="30dp"
                    android:inputType="number"
                    android:hint="*"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:id="@+id/verify1"
                    android:textColor="@color/primary"
                    android:textColorHint="@color/primary"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="30sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:minWidth="50dp"
                    android:layout_marginRight="30dp"
                    android:inputType="number"
                    android:hint="*"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:id="@+id/verify2"
                    android:textColor="@color/primary"
                    android:textColorHint="@color/primary"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="30sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:minWidth="50dp"
                    android:layout_marginRight="30dp"
                    android:inputType="number"
                    android:hint="*"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:id="@+id/verify3"
                    android:textColor="@color/primary"
                    android:textColorHint="@color/primary"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="30sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:minWidth="50dp"
                    android:layout_marginRight="30dp"
                    android:inputType="number"
                    android:hint="*"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:id="@+id/verify4"
                    android:textColor="@color/primary"
                    android:textColorHint="@color/primary"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="30sp"/>

        </LinearLayout>
        <Button
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="0dp"
                android:text="Verify"
                android:id="@+id/verify_code"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_bold"
                android:textSize="16dp"
                android:background="@drawable/button" />

    </LinearLayout>
</LinearLayout>
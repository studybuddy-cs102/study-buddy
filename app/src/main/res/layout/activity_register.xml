<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:backgroundTint="@null"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
        <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StudyBuddy"
                android:textStyle="bold"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:textSize="65sp"/>

        <TextView
                android:id="@+id/register_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRATION"
                android:textStyle="bold"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/primary"
                android:textSize="45sp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/email_icon" />
            <EditText
                    android:id="@+id/email_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenir"
                    android:inputType="text"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="11dp"
                    android:layout_centerVertical="true"
                    android:hint="studybuddy@bilkent"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
            />
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/line_primary" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:orientation="horizontal">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pass_icon" />
            <EditText
                    android:id="@+id/password_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenir"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="11dp"
                    android:layout_centerVertical="true"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:hint="Password"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
            />
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/line_primary" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:orientation="horizontal">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pass_icon" />

            <EditText
                    android:id="@+id/confirm_password_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenir"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="11dp"
                    android:layout_centerVertical="true"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/line_primary" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/year_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenir"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentStart="true"
                    android:hint="Year Of Birth"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:lines="1"
                    android:maxLength="4"
                    android:singleLine="true"
                    android:inputType="number"
                    android:layout_centerInParent="true" />

            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/gender"
                    android:checkedButton="@id/gender_male"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true">

                <RadioButton
                        android:text="@string/gender_female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/gender_female"
                        android:layout_weight="0.5" />

                <RadioButton
                        android:text="@string/gender_male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/gender_male"
                        android:layout_weight="0.5" />
            </RadioGroup>

        </RelativeLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="0dp"
                android:text="SignUp"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_bold"
                android:id="@+id/SignUp"
                android:textSize="16dp"
                android:background="@drawable/button" />

    </LinearLayout>
</LinearLayout>
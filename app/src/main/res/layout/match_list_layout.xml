<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="match"
                type="com.cs102.studybuddy.core.Match" />
        <variable
                name="callback"
                type="com.cs102.studybuddy.listeners.MatchClickListener" />
    </data>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="230dp"
                android:layout_gravity="start">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{match.courseId}"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/avenir_bold" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{match.members.keySet().toString().substring(1,match.members.keySet().toString().length-1)}"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/avenir" />
        </LinearLayout>
        <Button
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:text="End Match"
                android:background="@drawable/button"
                android:onClick="@{(v) -> callback.onMatchClick(match)}"
                tools:ignore="RelativeOverlap" />

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:backgroundTint="@null"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
        <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StudyBuddy"
                android:textStyle="bold"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:textSize="65sp"/>

        <TextView
                android:id="@+id/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir"
                android:text="Please login with your email and password"
                android:textColor="@color/black"
                android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:orientation="horizontal">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/email_icon" />
            <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenir"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="11dp"
                    android:layout_centerVertical="true"
                    android:hint="studybuddy@bilkent"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
            />
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/line_primary" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:orientation="horizontal">
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pass_icon" />
            <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/avenir"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="11dp"
                    android:layout_centerVertical="true"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
            />
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/line_primary" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:orientation="horizontal">
            <Button
                    android:id="@+id/RememberMe"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_icon"
                    android:backgroundTint="@color/primary"/>
            <TextView
                    android:id="@+id/RememberMeText"
                    android:text="Remember Me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir"
                    android:layout_toRightOf="@id/RememberMe"
                    android:layout_toLeftOf="@id/forgotPass"
                    android:layout_marginStart="0dp"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:textSize="16sp"/>
            <Button
                    android:id="@+id/forgotPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenir_bold"
                    android:text="Forgot Password?"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:textSize="13sp"
                    android:textColor="@color/primary"
                    android:background="@color/transparent"/>
        </RelativeLayout>
        <Button
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="0dp"
                android:text="Login"
                android:id="@+id/Login"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_bold"
                android:textSize="16dp"
                android:background="@drawable/button" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:orientation="horizontal">
            <TextView
                    android:id="@+id/noAccount"
                    android:text="Donâ€™t have an account?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/goSignUp"
                    android:layout_marginStart="0dp"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:textSize="16sp"/>
            <Button
                    android:id="@+id/goSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenir_bold"
                    android:text="Sign Up"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:background="@color/transparent"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>